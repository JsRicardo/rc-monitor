{
  "private": true,
  "name": "rc-monitor",
  "version": "1.0.0",
  "description": "A cross-platform plugin-based frontend monitoring tool",
  "scripts": {
    "build": "node scripts/build.js",
    "build:core": "node scripts/build.js core",
    "build:plugins": "node scripts/build.js plugins",
    "build:utils": "node scripts/build.js utils",
    "build:rc-monitor": "node scripts/build.js rc-monitor",
    "dev": "node scripts/dev.js",
    "dev:core": "node scripts/dev.js core",
    "dev:plugins": "node scripts/dev.js plugins",
    "dev:utils": "node scripts/dev.js utils",
    "dev:rc-monitor": "node scripts/dev.js rc-monitor",
    "release": "node scripts/release.js",
    "release:test": "node scripts/release.js --all --dry-run",
    "release:core": "node scripts/release.js core",
    "release:plugins": "node scripts/release.js plugins",
    "release:utils": "node scripts/release.js utils",
    "release:rc-monitor": "node scripts/release.js rc-monitor",
    "test": "pnpm -r run test",
    "clean": "pnpm -r run clean",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "format": "prettier --write packages/**/src/**/*.{ts,js,json,md}",
    "spellcheck": "cspell --no-progress --no-summary **/*.ts",
    "spellcheck:fix": "cspell --no-progress --no-summary --fix **/*.ts",
    "typecheck": "tsc --noEmit",
    "commit": "cz",
    "prepare": "husky"
  },
  "keywords": [
    "monitoring",
    "frontend",
    "cross-platform",
    "plugin",
    "react",
    "vue"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "type": "module",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "cspell --no-progress --no-summary"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "commitizen": "^4.3.0",
    "cspell": "^8.15.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.2.0"
  }
}

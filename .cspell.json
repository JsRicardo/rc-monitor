{
  "version": "0.2",
  "language": "en",
  "words": [
    "adapter",
    "behavior",
    "commitizen",
    "commitlint",
    "cross-platform",
    "cspell",
    "eslint",
    "frontend",
    "husky",
    "lintstaged",
    "longtask",
    "monitor",
    "npmignore",
    "performance",
    "plugin-based",
    "pnpm",
    "prettier",
    "rc-monitor",
    "rollup",
    "tarojs",
    "tslib",
    "ttfb",
    "typescript",
    "Uniapp",
    "unuse",
    "unuseAllPlugin",
    "utils",
    "Vite",
    "WEAPP",
    "workspace"
  ],
  "ignoreWords": [
    "devDependencies",
    "packageManager",
    "tsconfig",
    "esm",
    "cjs",
    "index",
    "src",
    "dist"
  ],
  "ignorePaths": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "*.log",
    "*.min.js",
    "package-lock.json",
    "pnpm-lock.yaml"
  ],
  "dictionaries": ["typescript", "node", "softwareTerms"],
  "patterns": [
    {
      "name": "HTML Comments",
      "pattern": "/<!--[\\s\\S]*?-->/",
      "description": "Ignore HTML comments"
    },
    {
      "name": "Code Blocks",
      "pattern": "/```[\\s\\S]*?```/",
      "description": "Ignore code blocks in markdown"
    }
  ]
}
